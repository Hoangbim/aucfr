# Environment variables cho ứng dụng update-cloudflare-record
# Copy file này thành .env và điền các giá trị thực tế

# SSH Configuration
SSH_PORT=2222
SSH_USER=your_ssh_user
SSH_HOST=your_ssh_host

# Fail2Ban Configuration  
FAIL2BAN_MAX_RETRY=3
FAIL2BAN_BAN_TIME=3600

# Cloudflare Configuration
CLOUDFLARE_TUNNEL_ID=your_tunnel_id
CLOUDFLARE_AUTH_KEY=your_auth_key
CLOUDFLARE_DOMAIN=your.domain.com
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token

# DNS Configuration - Đây là các thông số quan trọng nhất
DNS_RECORD_ID=your_dns_record_id
DNS_NAME=subdomain.your.domain.com
